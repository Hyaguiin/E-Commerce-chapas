{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",                                
    "esModuleInterop": true,                            
    "skipLibCheck": true,                                
    "strict": true,                                     
    "forceConsistentCasingInFileNames": true,          
    "outDir": "./dist",                                 
    "rootDir": "./src"                                 
  },
  "include": [
    "src/**/*"                                          
  ],
  "exclude": [
    "node_modules"                                     
  ]
}
